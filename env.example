# Car Finder Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# API KEYS (Required)
# =============================================================================
PERPLEXITY_API_KEY=your_perplexity_api_key_here
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Your EC2 public IP address
EC2_PUBLIC_IP=your.ec2.public.ip

# Your domain name (optional)
DOMAIN_NAME=your-domain.com

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Custom ports to avoid conflicts with other projects
CAR_FINDER_PORT=8001
MONGO_PORT=27018
MONGO_ADMIN_PORT=8082

# =============================================================================
# SECURITY (Change these!)
# =============================================================================
MONGO_ROOT_USERNAME=carfinder
MONGO_ROOT_PASSWORD=change_this_password_123
MONGO_ADMIN_USERNAME=admin
MONGO_ADMIN_PASSWORD=change_this_admin_password

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================
# Logging level
LOG_LEVEL=INFO

# Resource limits (adjust based on your EC2 instance)
MEMORY_LIMIT=2G
CPU_LIMIT=1.0 